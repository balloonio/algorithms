# This is an example .flake8 config, used when developing *Black* itself.
# Keep in sync with setup.cfg which is used for source packages.

[flake8]
ignore = E203, E266, E501, W503, F821, E226, W291
max-line-length = 80
max-complexity = 18
select = F401, F841, F811, F812, F823, F831, T4, B9

builtins: collections, math, copy, heapq

show_source = True
show-source = True
